server {
    listen 80;
    charset utf-8;
    access_log /var/log/nginx/ejrf.access.log;
    error_log /var/log/nginx/ejrf.error.log;
    # max upload size
    client_max_body_size 50M;   # adjust to taste

    location / {
        uwsgi_pass unix:///tmp/ejrf.sock;
        include uwsgi_params;
    }

    location /static {
        alias   /srv/checkout/static/;

    }

}